/* ===== SCROLLBARS (VERTICAL &amp; HORIZONTAL) ===== */

/* Track */
QScrollBar:vertical, QScrollBar:horizontal {
    background: rgba(255, 255, 255, 0.05);  /* subtle track */
    border-radius: 6px;
    margin: 0px;  /* remove extra space */
}

/* Handle / Thumb */
QScrollBar::handle:vertical, QScrollBar::handle:horizontal {
    background: rgba(120, 120, 120, 0.35);  /* glassy thumb */
    border-radius: 6px;
    border: 1px solid rgba(255, 255, 255, 0.2); /* subtle highlight */
    min-height: 30px; /* vertical */
    min-width: 30px;  /* horizontal */
}

QScrollBar::handle:vertical:hover,
QScrollBar::handle:horizontal:hover {
    background: rgba(120, 120, 120, 0.55);
}

/* Buttons (up/down or left/right) */
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical,
QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 16px;  /* horizontal buttons width */
    height: 16px; /* vertical buttons height */
    background: rgba(180, 180, 180, 0.35);
    border-radius: 4px;
}

/* Arrow icons */
QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical,
QScrollBar::left-arrow:horizontal, QScrollBar::right-arrow:horizontal {
    width: 6px;
    height: 6px;
    background: transparent;
}

/* Remove blank areas */
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical,
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

/* Sizes */
QScrollBar:vertical { width: 12px; }
QScrollBar:horizontal { height: 12px; }
