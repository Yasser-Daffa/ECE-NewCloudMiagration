    background: rgba(250, 250, 250, 200);
    font-size: 11pt;
    color: #111111;
}

/* Focused state */
QComboBox:focus {
    border: 2px solid #667EEA; 
    background: rgba(250, 250, 250, 220);
}

/* ----------------- Drop-down Arrow ----------------- */
QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 30px; 
    border-left-width: 1px;
    border-left-color: #E0E0E0;
    border-left-style: solid;
    border-top-right-radius: 12px;       /* rounder corners */
    border-bottom-right-radius: 12px;    /* rounder corners */
    background: transparent;
}

/* Remove ugly black border on hover/focus */
QComboBox::drop-down:hover,
QComboBox::drop-down:focus {
    border-left-color: #667EEA;
    background: transparent;
    border: none;
}

/* Modern, visible arrow using simple chevron */
QComboBox::down-arrow {
    width: 10px;
    height: 10px;
    border: solid #667EEA;
    border-width: 0 2px 2px 0;
    margin-right: 6px;
}

